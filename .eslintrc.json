{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:@typescript-eslint/recommended", "airbnb-base", "wesbos"],
  "overrides": [],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": [
    "node_modules/**",
    "build/**",
    "dist/**",
    "NetscriptDefinitions.d.ts",
    "tsconfig.json"
  ],
  "rules": {
    "no-console": "off",
    "no-debugger": "warn",
    "no-constant-condition": 0,
    "@typescript-eslint/no-explicit-any": 0,
    "lines-between-class-members": 0,
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 80
      }
    ]
  }
}
